# ==============================================
# Site Configuration
# ==============================================
NEXT_PUBLIC_SITE_URL=https://eps-mauritanie.com
NEXT_PUBLIC_SITE_NAME="EPS - El Baraka Prestations de Service"

# ==============================================
# Contact Information
# ==============================================
NEXT_PUBLIC_PHONE="+222 XX XX XX XX"
NEXT_PUBLIC_EMAIL=contact@eps.mr
NEXT_PUBLIC_ADDRESS="Nouakchott, Mauritanie"

# ==============================================
# Social Media URLs
# ==============================================
NEXT_PUBLIC_FACEBOOK_URL=https://www.facebook.com/p/EPS-El-baraka-Prestation-de-Service-100085244981442/?locale=fr_FR
NEXT_PUBLIC_LINKEDIN_URL=https://mr.linkedin.com/company/eps-2019
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/eps
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/eps

# ==============================================
# Feature Flags
# ==============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT=false

# ==============================================
# Analytics Configuration (if enabled)
# ==============================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# ==============================================
# Email Service (for contact forms and job applications)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=contact@eps-mauritanie.com
SMTP_PASSWORD=your_email_password
EMAIL_SERVICE_API_KEY=
EMAIL_SERVICE_FROM=noreply@eps.mr

# Email de l'administrateur (pour recevoir les candidatures)
ADMIN_EMAIL=admin@eps.mr

# ==============================================
# Google Maps (for contact page map)
# ==============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==============================================
# WordPress Headless CMS
# ==============================================
# URL de base de l'API REST WordPress (sans /wp-json/wp/v2)
NEXT_PUBLIC_WORDPRESS_URL=https://cms.eps-mauritanie.com/wp-json/wp/v2

# URL d'authentification JWT (optionnel, pour les contenus privés)
NEXT_PUBLIC_WORDPRESS_AUTH_URL=https://cms.eps-mauritanie.com/wp-json/jwt-auth/v1

# Identifiants WordPress (optionnel, pour les contenus privés)
WORDPRESS_USERNAME=your_username
WORDPRESS_PASSWORD=your_password

# Temps de revalidation du cache (en secondes)
# 3600 = 1 heure, 60 = 1 minute, 0 = pas de cache
REVALIDATE_TIME=3600

# ==============================================
# Development
# ==============================================
NODE_ENV=development
